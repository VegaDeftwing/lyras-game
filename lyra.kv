#:kivy 1.0.9
<FinalLayout>
    canvas:
        Color:
            rgba: .207, .0039, .1333, 1
        Rectangle:
            pos: self.pos
            size: self.width, self.height

<Map>
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: (0,self.height/2)
            size: self.width / 16, self.height / 128

<ScrolllabelLabel>
    canvas:
        Color:
            rgba: .207, .0039, .1333, 1
        Rectangle:
            pos: self.pos
            size: self.width, self.height
    Label:
        text: root.text
        font_size: 20
        text_size: self.width, None
        size_hint_y: None
        padding_x: 30
        padding_y: 40
        height: self.texture_size[1]

<BtnLayout>:
    cols: 4
    rows: 4
    canvas:
        Color:
            rgba: .207, .0039, .1333, 1
        Rectangle:
            pos: self.pos
            size: self.size

