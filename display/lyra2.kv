#:kivy 1.0.9

#Set The background color
<FinalLayout>
    canvas:
        Color:
            rgba: .207, .0039, .1333, 1
        Rectangle:
            pos: self.pos
            size: self.width, self.height
    GridLayout:
        size: root.size
        rows: 2
        cols: 2
        GridLayout:
            id: StatsAndMap
            cols: 9
            rows: 6
            padding: (5, 7)
            Button:
                text: "StatsAndMap"
        ScrollView:
            id: crap
            text: root.display_text
            font_size: 20
            text_size: self.width, None
            size_hint: (2.2, 3)
            padding_x: 30
            padding_y: 40
        GridLayout:
            id: CharsAndMenu
            cols: 9
            rows: 6
            padding: (5, 7)
            Button:
                text: "CharsAndMenu"
        BtnLayout:
            spacing: 13
            cols: 5
            rows: 3
            height: 270
